{
  "manifest_version": 3,
  "name": "phpMyAdmin Export Helper",
  "version": "1.0.0",
  "description": "Adds direct export functionality to phpMyAdmin SQL pages",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*phpmyadmin*",
        "*://*/*index.php*",
        "*://*/*/sql*",
        "*://*/*/query*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "phpMyAdmin Export Helper"
  }
}
